<!-- Launch whole test in 3 most popular web browser(chrome. edge, firefox) -->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name = "Test_of_whole_site">
    <!-- Launch Chrome test -->
    <test  name="Demo_Store_chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="Demo_Store_Cross_Browser.RegisterAndLoginTest_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.ProductsPageFunctionality_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.CartTestFunctionality_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.CheckoutTest_Cross_Browser">
            </class>
        </classes>
    </test>
    <!-- Launch Edge test -->
    <test name="Demo_Store_edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="Demo_Store_Cross_Browser.RegisterAndLoginTest_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.ProductsPageFunctionality_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.CartTestFunctionality_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.CheckoutTest_Cross_Browser">
            </class>
        </classes>
    </test>
    <!-- Launch FireFox test -->
    <test name="Demo_Store_firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="Demo_Store_Cross_Browser.RegisterAndLoginTest_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.ProductsPageFunctionality_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.CartTestFunctionality_Cross_Browser">
            </class>
            <class name="Demo_Store_Cross_Browser.CheckoutTest_Cross_Browser">
            </class>
        </classes>
    </test>
</suite>