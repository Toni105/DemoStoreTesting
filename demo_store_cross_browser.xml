<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name = "Test_of_whole_site">
    <!-- Launch whole site test in 3 web browser(Chrome, Edge and Firefox) -->
    <!-- Launch Chrome test -->
    <test  name="Demo_Store_chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="Demo_Store_Cross_Browser.RegisterAndLoginCrossBrowserTest">
            </class>
            <class name="Demo_Store_Cross_Browser.ProductsPageFunctionalityCrossTest">
            </class>
            <class name="Demo_Store_Cross_Browser.CartFunctionalityCrossTest">
            </class>
            <class name="Demo_Store_Cross_Browser.CheckoutCrossTest">
            </class>
        </classes>
    </test>
    <!-- Launch Edge test -->
    <test name="Demo_Store_edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="Demo_Store_Cross_Browser.RegisterAndLoginCrossBrowserTest">
            </class>
            <class name="Demo_Store_Cross_Browser.ProductsPageFunctionalityCrossTest">
            </class>
            <class name="Demo_Store_Cross_Browser.CartFunctionalityCrossTest">
            </class>
            <class name="Demo_Store_Cross_Browser.CheckoutCrossTest">
            </class>
        </classes>
    </test>
    <!-- Launch FireFox test -->
    <test name="Demo_Store_firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="Demo_Store_Cross_Browser.RegisterAndLoginCrossBrowserTest">
            </class>
            <class name="Demo_Store_Cross_Browser.ProductsPageFunctionalityCrossTest">
            </class>
            <class name="Demo_Store_Cross_Browser.CartFunctionalityCrossTest">
            </class>
            <class name="Demo_Store_Cross_Browser.CheckoutCrossTest">
            </class>
        </classes>
    </test>
</suite>